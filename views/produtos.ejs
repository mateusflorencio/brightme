            <% }%>
              <% }%>
                <br>
                <h3>Fabricantes </h3>
                <% if(data.fabricantes) {%>
                  <% for(const n of data.fabricantes) { %>
                    <div class="d-flex mt-sm"><input class="mg--rigth--sm" type="checkbox" name="<%= n.id %>">
                      <%= n.nome %>
                    </div>

                    <% }%>
                      <% }%>


                        <h3 class="mt-20">Pre√ßo</h3>

                        <input type="number" name="preco-min" id="" class="mt-20 input" placeholder="min">
