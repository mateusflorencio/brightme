<!DOCTYPE html>
<html lang="pt-br">


<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../../styles/administrador.css">
  <link rel="shortcut icon" href="../../image/favicon.png" type="image/x-icon">
  <script src="./script/administrador.js" defer></script>
  <script src="./script/menu.js" defer></script>
  <title>Painel administrativo</title>
</head>

<body>
  <%- include('./partials/header') %>
    <br>
    <!-- Inicio -->
    <div class="container__section mt-20 d-flex">
      <!-- listage de pedidos -->
      <section class="rigth">
        <label class="titulo-large">Pedidos</label>
        <div class="lista__order mt-20">
          <ul>

            <% if(data.pedidos) { %>
              <% for(const n of data.pedidos) { %>
                <li > 
                  <div class="t-red bg-grey">
                    <%= n.status %>
                  </div>
                </li>
                <li class="d-flex space-between mt-sm">
                  <div>
                    Id : <%= n.id %>
                  </div>
                  <div>
                    ClienteId : <%= n.clienteId %>
                  </div>

                  <div class="col d-flex">
                    <% for(const prod of n.produtos) { %>

                      <div>
                        <%= prod.nome %>
                      </div>
                      <% } %>
                  </div>

                  <div>
                    qtd : <%= n.produtos.length %>
                  </div>

                  <div>
                    <%= n.total %>
                  </div>
                </li>

                <% } %>
                  <% } %>

          </ul>
        </div>
      </section>
      <section class="left">

        <!-- Modals-->
        <div class="fundoModal"></div>
        <%- include('./partials/modal-editar-produto') %>
          <%- include('./partials/modal-categoria') %>
            <%- include('./partials/modal-fabricante') %>

              <!--- Btn -->
              <div class="btn_add d-flex">
                <a href="/produtos/criar" class="btn bg-blue t-white mg-1 w-100 link">+ Produto</a>
                <button class="btn bg-green t-white mg-1  w-100" onclick="abrirModal('adicionarCategoria')">+
                  Categoria</button>
                <button class="btn bg-green t-white mg-1  w-100" onclick="abrirModal('adicionarFabricante')">+
                  Fabricante</button>
              </div>

              <!-- Ads -->
              <div class="ads"><img src="" alt=""></div>
              <!-- Administracao de produtos -->
              <%- include('./partials/adm-lista-produtos') %>
      </section>

    </div>
    <div class="all-center mt-20">
      <button class="sair bg-red btn t-white" onclick="encerrarSessao()">Sair</button>
    </div>

    <br>





    <%- include('./partials/footer') %>
</body>

</html>