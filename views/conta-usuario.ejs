<!DOCTYPE html>
<html lang="PT-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../styles/conta-usuario.css">
    <link rel="shortcut icon" href="../../image/favicon.png" type="image/x-icon">
    <script src="../../script/conta-usuario.js" defer></script>
    <title>Conta Usuário</title>
</head>

<body>
    <%- include('./partials/header') %>
        <br><br>
        <section class="container">
            <div class="cliente card">
                <div class="img__cliente__container">
                    <div class="img__cliente">
                        <% if(data){ %>
                            <img src=" <%= data.image %> " alt="">
                           
                                <div class="mt-sm">
                                    <form id="img__cliente" method="post" enctype="multipart/form-data">
                                        <label for='selecao-arquivo' class="selecao-arquivo">Trocar Image</label>
                                        <input onchange="changeImage()" id='selecao-arquivo' type='file'>
                                        <button class="btn__submit" type="submit"></button>
                                    </form>
                                </div>

                    </div>
                </div>
                <div class="info__cliente">
                    <strong>Nome:</strong>  <%= data.cliente.nome %> <%= data.cliente.sobrenome %><br>
                    <strong>Telefone:</strong> <label class="telefone"> <%= data.cliente.telefone %> </label> <br> 
                    <strong>Email:</strong> <%= data.cliente.email %> <br>
                    <strong>CPF:</strong>  <label class="cpf"> <%= data.cliente.cpf %> </label> <br>
                    <strong>Endereço:</strong> Rua jose maria, 8, Vila Maruitá, São Caetano, SP, 09999-999 <br>
                    <% } %>
                </div>
            </div>
            <br>
            <div class="favoritos w-100 bg-rosa t-white">
                <h3 class="pd-sm">Meus Favoritos</h3>
            </div>
            <br>

            <div class="pedidos w-100">
                <h3 class="bg-rosa t-white pd-sm">Meus pedidos</h3>

                <ul class="mt-20">
                    <li>Pedido Nº 12345</li>
                    <li>Pedido Nº 51902</li>
                    <li>Pedido Nº 33343</li>
                </ul>
            </div><br>

            <section class="conta__info d-flex">
                <div class="forms w-50">
                    <form class="email">
                        <!-- alterar email-->
                        <label for="email">Alterar e-mail</label><br>
                        <input class="w-100 input " type="email" name="email" id="email"
                            placeholder="Insira seu novo e-mail">
                        <button class="btn mt-sm" type="submit">
                            Alterar e-mail
                        </button><br>
                    </form>

                    <form action="">
                        <label for="password">Alterar senha</label><br>
                        <input class="input w-100" type="password" name="password" id="password"
                            placeholder="Insira sua nova senha"><br>

                        <input class="input w-100 mt-sm" type="password" id="passwordConfirm"
                            placeholder="Insira sua nova senha outra vez"><br>
                        <button class="btn mt-sm" type="submit">Alterar Senha</button><br>
                    </form>
                </div>
            </section>
            <div class="btn__footer">

            <button onclick="encerrarSessao()" class="btn bg-blue t-white pd-sm">Sair</button>
            <button onclick="deleteConta()" class="btn bg-red t-white pd-sm">Apagar Conta</button>
        </div>
        </section> <br>
        <%- include('./partials/footer') %>

</body>

</html>